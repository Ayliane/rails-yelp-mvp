<div class="container">
  <div class="row">
    <div class="col-xs-12"
      <div class="fixed">
      <div class="float">
        <p id="notice"><%= notice %></p>

        <img src="https://unsplash.it/200">

        <p>
          <strong>Name:</strong>
          <%= @restaurant.name %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @restaurant.address %>
        </p>

        <p>
          <strong>Phone number:</strong>
          <%= @restaurant.phone_number %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @restaurant.category %>
        </p>
        </div>
      </div>
  </div>
  <div class="col-xs-12">
    <%= link_to 'Back', restaurants_path %>
    |
    <%= link_to 'Add review', new_restaurant_review_path(@restaurant)  %>
  </div>
</div>
</div>

<div class="container">
  <div class="row">

    <h4>Our reviews</h4>

    <% @restaurant.reviews.each do |review| %>
    <%= review.content %>
    <br>
    <%= show_stars(review.rating) %>
    <hr>
    <% end %>
  </div>
</div>
