<p id="notice"><%= notice %></p>

<h1 class="text-center">Restaurants</h1>
<br>


<% @restaurants.each_with_index do |restaurant, i| %>

<div class="card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("https://unsplash.it/1200/300/?random#{i}");'>
  <div class="card-category"><%= restaurant.category %></div>
  <div class="card-description">
    <h2><%= link_to restaurant.name, restaurant %></h2>
    <p><%= restaurant.address %></p>
  </div>
  <%= link_to "", restaurant, class: "card-link" %>
</div>
<br>
<% end %>
